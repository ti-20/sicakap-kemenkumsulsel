# Database Configuration untuk Development
# Catatan: Port akan auto-detect (3307 untuk localhost, 3306 untuk hosting)
# Jika perlu override, uncomment dan sesuaikan DB_PORT di bawah
DB_HOST=localhost
# DB_PORT=3307  # Uncomment jika port MySQL localhost berbeda
DB_NAME=rekap_konten
DB_USER=root
DB_PASSWORD=

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/rekap-konten

# Session Configuration
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Security Configuration
ENCRYPTION_KEY=dev_secret_key_change_in_production
