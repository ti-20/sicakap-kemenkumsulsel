# Protect config directory
<Files "*.php">
    Order Allow,Deny
    Deny from all
</Files>

# Allow only specific files
<Files "database.php">
    Order Allow,Deny
    Allow from all
</Files>

# Protect .env files
<Files ".env*">
    Order Allow,Deny
    Deny from all
</Files>

# Protect sensitive files
<Files "database_secure.php">
    Order Allow,Deny
    Deny from all
</Files>
